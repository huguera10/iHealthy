<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ihealthy.ihealthy.MyDietFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/EDtituloRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLength="99"
                android:singleLine="true"
                android:text="My Diet Needs"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_save"
                android:layout_alignLeft="@+id/et_tuesday"
                android:layout_alignRight="@+id/btn_save"
                android:layout_alignStart="@+id/et_tuesday"
                android:layout_below="@+id/EDtituloRole"
                android:hint="1500"
                android:inputType="number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_sunday"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Sunday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_monday"
                android:layout_alignBottom="@+id/et_monday"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Monday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_tuesday"
                android:layout_alignBottom="@+id/et_tuesday"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Tuesday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/et_sunday"
                android:layout_alignLeft="@+id/et_sunday"
                android:layout_alignRight="@+id/et_sunday"
                android:layout_alignStart="@+id/et_sunday"
                android:layout_below="@+id/et_sunday"
                android:ems="10"
                android:hint="1000"
                android:inputType="number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_tuesday"
                android:text="Wednesday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_thursday"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="119dp"
                android:text="Save" />

            <EditText
                android:id="@+id/et_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_save"
                android:layout_alignLeft="@+id/et_wednesday"
                android:layout_alignRight="@+id/btn_save"
                android:layout_alignStart="@+id/et_wednesday"
                android:layout_below="@+id/textView16"
                android:hint="2000"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_save"
                android:layout_alignRight="@+id/btn_save"
                android:layout_below="@+id/textView15"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/tv_5"
                android:layout_toRightOf="@+id/tv_5"
                android:hint="1500"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_wednesday"
                android:text="Thursday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/et_wednesday"
                android:layout_alignLeft="@+id/et_wednesday"
                android:layout_alignRight="@+id/et_wednesday"
                android:layout_alignStart="@+id/et_wednesday"
                android:layout_below="@+id/tv_5"
                android:hint="1200"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_thursday"
                android:text="Friday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_7"
                android:layout_alignBottom="@+id/tv_7"
                android:layout_alignEnd="@+id/et_thursday"
                android:layout_alignLeft="@+id/et_thursday"
                android:layout_alignRight="@+id/et_thursday"
                android:layout_alignStart="@+id/et_thursday"
                android:hint="1200"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_friday"
                android:text="Saturday:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_8"
                android:layout_alignBottom="@+id/tv_8"
                android:layout_alignEnd="@+id/et_friday"
                android:layout_alignLeft="@+id/et_friday"
                android:layout_alignRight="@+id/et_friday"
                android:layout_alignStart="@+id/et_friday"
                android:hint="1200"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_sunday"
                android:layout_alignBottom="@+id/et_sunday"
                android:layout_toEndOf="@+id/et_sunday"
                android:layout_toRightOf="@+id/et_sunday"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_saturday"
                android:layout_alignBottom="@+id/et_saturday"
                android:layout_toEndOf="@+id/et_saturday"
                android:layout_toRightOf="@+id/et_saturday"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_7"
                android:layout_toEndOf="@+id/et_friday"
                android:layout_toRightOf="@+id/et_friday"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_6"
                android:layout_toEndOf="@+id/et_thursday"
                android:layout_toRightOf="@+id/et_thursday"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_5"
                android:layout_alignBottom="@+id/tv_5"
                android:layout_toEndOf="@+id/et_wednesday"
                android:layout_toRightOf="@+id/et_wednesday"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_4"
                android:layout_toEndOf="@+id/et_tuesday"
                android:layout_toRightOf="@+id/et_tuesday"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_monday"
                android:layout_alignBottom="@+id/et_monday"
                android:layout_toEndOf="@+id/et_monday"
                android:layout_toRightOf="@+id/et_monday"
                android:text="Calories"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
